# http://editorconfig.org

# Top-most EditorConfig file
root = true

# Front End Languages (HTML, JS, CSS, etc.)
[*.js.snap]
trim_trailing_whitespace = false

[*.{js,css,html}]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.js]
quote_type = single

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
